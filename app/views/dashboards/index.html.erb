<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <%= render partial: "/shared/search_bar", locals: {controller: "dashboards", action: "index"} %>
      <ul id="myTab" class="nav nav-tabs">
        <li class="active"><a href="#students" data-toggle="tab">Estudiantes <span class="badge"><%= @students.count %> </span></a></li>
        <li class=""><a href="#teachers" data-toggle="tab">Profesores <span class="badge"><%= @teachers.count %> </span></a></li>
        <li class=""><a href="#subjects" data-toggle="tab">Materias <span class="badge"><%= @subjects.count %> </span></a></li>
        <li class=""><a href="#charts" data-toggle="tab">Estadisticas</a></li>
      </ul>
      <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade active in" id="students">
          <div class="users-list">
            <div class="row">
              <div class="col-sm-12">
                <%= render 'students_list'%>
              </div>
            </div>
          </div>
        </div>
        <div class="tab-pane fade" id="teachers">
          <div class="users-list">
            <div class="row">
              <div class="col-sm-12">
                <%= render 'teachers_list'%>
              </div>
            </div>
          </div>
        </div>
        <div class="tab-pane fade" id="subjects">
          <div class="users-list">
            <div class="row">
              <div class="col-sm-12">
                <%= render 'subjects_list' %>
              </div>
            </div>
          </div>
        </div>
        <div class="tab-pane fade" id="charts">
          <div class="users-list">
            <div class="row">
              <div class="col-sm-12">
                <%= render 'charts'%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script> 
$('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
  var target = $(e.target).attr("href") 
});
</script>



